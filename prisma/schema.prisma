datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  role      String    // "service_provider" or "admin" or"consumer"
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Provider {
  id                 Int      @id @default(autoincrement())
  userId             Int      @unique
  category           String
  description        String
  location           String
  contactPhone       String
  contactEmail       String
  subscriptionStatus String   // "pending" | "active" | "expired"
  subscriptionExpiry DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
